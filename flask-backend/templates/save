import mysql.connector

config = {
  'user': 'root',
  'password': 'mysqlpass',
  'host': '127.0.0.1',
  'database': 'uiuc_scholars'
}

cnx = mysql.connector.connect(**config)
print("Connected to MySQL successfully!")

cursor = cnx.cursor()
query = ("SELECT * FROM scholars NATURAL JOIN articles WHERE scName = 'Abdussalam Alawini';")
cursor.execute(query)

for x in cursor:
  print(x)


